# Example environment file (do not put real secrets here)

# Server
HOST=0.0.0.0
PORT=8080
DEBUG=false

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000

# Auth
JWT_SECRET_KEY=change-me
PASSWORD_SALT=job-applier-salt

# Daily limits
DEFAULT_DAILY_LIMIT=10
MAX_DAILY_LIMIT=1000

# Per-platform daily limits (rolling 24h window)
LINKEDIN_DAILY_LIMIT_DEFAULT=5
INDEED_DAILY_LIMIT_DEFAULT=15
GREENHOUSE_DAILY_LIMIT_DEFAULT=30
LEVER_DAILY_LIMIT_DEFAULT=30
COMPANY_DAILY_LIMIT_DEFAULT=10

# Uploads
MAX_UPLOAD_SIZE_MB=10

# Moonshot (Kimi) AI
MOONSHOT_API_KEY=your_moonshot_key_here
MOONSHOT_MODEL=moonshot-v1-8k-vision-preview

# BrowserBase (required for automated applying)
BROWSERBASE_API_KEY=your_browserbase_key_here
BROWSERBASE_PROJECT_ID=your_browserbase_project_id_here

# Stagehand / AI browser actions (optional)
OPENAI_API_KEY=your_openai_key_here
MODEL_NAME=gpt-4o

# Notifications (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# SMTP email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_FROM=

# Queue worker (optional)
QUEUE_WORKER_ENABLED=true
QUEUE_POLL_INTERVAL_SECONDS=2
QUEUE_BASE_RETRY_DELAY_SECONDS=20
QUEUE_MAX_RETRY_DELAY_SECONDS=1800
QUEUE_DELAY_MIN_SECONDS=4
QUEUE_DELAY_MAX_SECONDS=12
QUEUE_LINKEDIN_DELAY_MIN_SECONDS=60
QUEUE_LINKEDIN_DELAY_MAX_SECONDS=180
QUEUE_RATE_LIMIT_COOLDOWN_SECONDS=1800
